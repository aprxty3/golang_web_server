{
  "openapi": "3.1.0",
  "info": {
    "title": "ToDo List RESTful API",
    "description": "ToDo List RESTful API",
    "version": "1.0.0",
    "termsOfService": "www.aji.com",
    "contact": {
      "name": "Aji",
      "email": "aji@gmail.com",
      "url": "www.aji.com"
    },
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "description": "ToDo List RESTful API",
      "url": "www.{environment}.aji.com/api/v1",
      "variables": {
        "environment": {
          "description": "Server Environment",
          "default": "dev",
          "enum": [
            "dev",
            "qa",
            "prod"
          ]
        }
      }
    }
  ],
  "paths": {
    "/todolist": {
      "get": {
        "summary": "Get All Todo List",
        "description": "Get All Todo List from Database",
        "parameters": [
          {
            "name": "include_done",
            "in": "query",
            "required": false,
            "description": "Is Include Done",
            "schema": {
              "type": [
                "boolean",
                "null"
              ],
              "default": false
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "Filter todolist by name",
            "schema": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {
        }
      },
      "post": {
        "summary": "Create New Todo List",
        "description": "Create New Todo List to Database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {}
            }
          }
        },
        "responses": {
        }
      }
    },
    "/todolist/{todolistId}": {
      "delete": {
        "summary": "Delete Spesific Todo List",
        "description": "Delete Spesific Todo List from Database",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "ToDo List ID",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {
        }
      },
      "put": {
        "summary": "Change Spesific Todo List",
        "description": "Change Spesific Todo List from Database",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "ToDo List ID",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {}
            }
          }
        },
        "responses": {
        }
      }
    }
  }
}
